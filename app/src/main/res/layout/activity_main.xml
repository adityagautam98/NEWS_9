<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#a69e9e"
    tools:context="com.example.home.myapplication.MainActivity"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:text="News Now"
    android:fontFamily="sans-serif"
    android:textSize="30sp"
    android:paddingLeft="10dp"
    android:textStyle="bold"


    android:textColor="#FFF"
    android:background="#999795"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#706666">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="tech">

                <ImageButton
                    android:onClick="tech"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/nw1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tech News"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/bg43"
                    android:scaleType="center"
                    android:onClick="tech"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Current Affairs"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
                android:layout_height="match_parent"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/bg656" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sports News"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
                android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/car3"
                    android:onClick="tech"
                    android:scaleType="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="First Gear"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
               android:layout_margin="2dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:onClick="tech"
                    android:layout_height="150dp"
                    android:scaleType="center"
                    android:src="@drawable/ec4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ecology News"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>